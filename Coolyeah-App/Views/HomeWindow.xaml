<Window x:Class="Coolyeah_App.Views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coolyeah_App.Views"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.85*"/>
                <RowDefinition Height="0.15*"/>
            </Grid.RowDefinitions>
            <Rectangle Grid.Row="1" Fill="#191D88"></Rectangle>
            <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <RadioButton Content="Option 1" x:Name="RadioButton1" Checked="RadioButton_Checked"/>
                <RadioButton Content="Option 2" x:Name="RadioButton2" Checked="RadioButton_Checked"/>
                <RadioButton Content="Option 3" x:Name="RadioButton3" Checked="RadioButton_Checked"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
